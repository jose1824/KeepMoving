<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pantalla_confPassword_coordinator"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.AppBarOverlay">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="?attr/colorPrimary"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
            </android.support.design.widget.AppBarLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context=".ClasesViews.PantallaConfPassword"
                android:orientation="vertical"
                android:id="@+id/conf_fotografia"
                android:gravity="center_horizontal|top">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/height_imagenes_small"
                        android:id="@+id/conImgPass"
                        android:src="@drawable/personal_usuario"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/padding_elements"
                        android:paddingLeft="@dimen/padding_elements"
                        android:text="Nombre del usuario"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/big_text"
                        android:id="@+id/confUsuarioNombrePass" />
            </LinearLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context=".ClasesViews.PantallaConfPassword"
                android:orientation="vertical"
                android:id="@+id/conf_formulario">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:paddingTop="@dimen/padding_elements"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/padding_elements"
                        android:id="@+id/imageView2"
                        android:src="@mipmap/ic_https_black_24dp"
                        android:layout_gravity="center_vertical|left" />

                    <android.support.design.widget.TextInputLayout
                        android:paddingTop="@dimen/padding_elements"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/confPassword_et_1"
                        android:theme="@style/EditTheme"
                        android:textColorHint="@color/colorPrimaryText">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/hint_contra_actual"
                            android:textColor="@color/colorPrimaryText"
                            android:theme="@style/EditTheme"
                            android:inputType="textPassword"
                            android:textColorHint="@color/colorPrimaryText"
                            android:id="@+id/conf_password_actual" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:paddingTop="@dimen/padding_elements"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/padding_elements"
                        android:id="@+id/imageView3"
                        android:src="@mipmap/ic_done_black_24dp"
                        android:layout_gravity="center_vertical|left" />

                    <android.support.design.widget.TextInputLayout
                        android:paddingTop="@dimen/padding_elements"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/confPassword_et_2"
                        android:theme="@style/EditTheme"
                        android:textColorHint="@color/colorPrimaryText">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/hint_contra_nueva"
                            android:textColor="@color/colorPrimaryText"
                            android:theme="@style/EditTheme"
                            android:inputType="textPassword"
                            android:textColorHint="@color/colorPrimaryText"
                            android:id="@+id/conf_password_nueva" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:paddingTop="@dimen/padding_elements"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/padding_elements"
                        android:id="@+id/imageView4"
                        android:src="@mipmap/ic_done_all_black_24dp"
                        android:layout_gravity="center_vertical|left" />

                    <android.support.design.widget.TextInputLayout
                        android:paddingTop="@dimen/padding_elements"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/confPassword_et_3"
                        android:theme="@style/EditTheme"
                        android:textColorHint="@color/colorPrimaryText">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/hint_contra_nueva_conf"
                            android:textColor="@color/colorPrimaryText"
                            android:theme="@style/EditTheme"
                            android:inputType="textPassword"
                            android:textColorHint="@color/colorPrimaryText"
                            android:id="@+id/conf_password_nueva_conf" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

             </LinearLayout>

        </LinearLayout>

     </ScrollView>

</android.support.design.widget.CoordinatorLayout>